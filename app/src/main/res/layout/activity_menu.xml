<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.casa.myapplication.Model.MenuActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

    </ScrollView>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/userDataField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text=" "
            android:textSize="22dp" />

        <Button
            android:id="@+id/new_order"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/userDataField"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle_button"
            android:padding="15dp"
            android:text="@string/new_order" />

        <Button
            android:id="@+id/watch_orders"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignLeft="@+id/new_order"
            android:layout_alignStart="@+id/new_order"
            android:layout_below="@+id/new_order"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle_button"
            android:padding="15dp"
            android:text="@string/watch_orders" />

        <Button
            android:id="@+id/petrol_send"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/circle_button"
            android:text="@string/petrol_send" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
