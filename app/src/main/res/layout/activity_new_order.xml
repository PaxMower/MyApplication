<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/driver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/driver"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/truck_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/truck_id"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/order_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/order_id"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/day"
                android:inputType="textPersonName" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <EditText
                    android:id="@+id/longitude"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="243dp" />

                <EditText
                    android:id="@+id/text_latitude"
                    android:layout_width="1dp"
                    android:layout_height="42dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="243dp" />

                <Button
                    android:id="@+id/button_open_map"
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:text="@string/button_open_maps"
                    android:textAlignment="center"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="8dp" />
            </android.support.constraint.ConstraintLayout>

            <Button
                android:id="@+id/sendOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:text="@string/button_order" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>