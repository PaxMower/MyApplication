<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.casa.myapplication">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Controller.LoginActivity"
            android:noHistory="true"
            android:windowSoftInputMode="stateHidden">
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controller.MenuActivity"
            android:label="@string/app_menu"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Controller.NewOrderActivity"
            android:label="@string/app_new_order"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Controller.WatchOrdersActivity"
            android:label="@string/app_watch_order"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Controller.SettingsActivity"
            android:label="@string/app_settings"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Controller.ChangeSettingsActivity"
            android:label="@string/app_change_settings"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Controller.PetrolActivity"
            android:label="@string/app_petrol"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Controller.MapsActivity"
            android:label="@string/app_maps"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Controller.AddClientActivity"
            android:label="@string/app_add_client"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Controller.WatchPetrolActivity"
            android:label="@string/app_watch_petrol"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Controller.MaintenanceActivity"
            android:label="@string/app_maintenance"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Controller.WatchMaintenanceActivity"
            android:label="@string/app_watch_maintenance"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Controller.EditMaintenanceActivity"
            android:label="@string/app_edit_maintenance"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Controller.EditPetrolActivity"
            android:label="@string/app_edit_petrol"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Controller.EditOrderActivity"
            android:label="@string/app_edit_maintenance"
            android:windowSoftInputMode="stateHidden" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

    </application>

</manifest>